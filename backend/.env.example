# ──────────────────────────────────────────────
# Dunam Velocity – Environment Variables
# Copy this file to .env and fill in your values
# ──────────────────────────────────────────────

# Shared API key for mobile ↔ backend authentication
API_KEY=change-me-to-a-strong-random-string

# MetaTrader 5 credentials
MT5_LOGIN=12345678
MT5_PASSWORD=your_mt5_password
MT5_SERVER=YourBroker-Server
MT5_PATH=C:\Program Files\MetaTrader 5\terminal64.exe

# Scalper / risk parameters
SMALL_PROFIT_USD=2.0
PROFIT_CHECK_INTERVAL=5
MAX_LOT_SIZE=1.0
MAX_OPEN_POSITIONS=10

# Supabase (for mobile app sync)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-or-service-key

# Server
HOST=0.0.0.0
PORT=8000
